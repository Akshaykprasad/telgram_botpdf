
import telegram
import asyncio

TELEGRAM_BOT_TOKEN = ""
TELEGRAM_USER_ID = ""
PDF_PATH = "test.pdf"  # Ensure this file exists in the same directory

async def send_pdf():
    bot = telegram.Bot(token=TELEGRAM_BOT_TOKEN)
    with open(PDF_PATH, "rb") as pdf_file:
        await bot.send_document(TELEGRAM_USER_ID, pdf_file, caption="ðŸ“„ Here is your test PDF!")

asyncio.run(send_pdf())
